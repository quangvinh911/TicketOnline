@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Ticket Onlline</title>
    <link rel="stylesheet" href="~/SimpleSlider/css/slider.css">
    <link href="~/Assets/admin/css/Css.Half-slider.css" rel="stylesheet" />
    <link href="~/Assets/admin/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Assets/admin/css/Css.2-col-portfolio.css" rel="stylesheet" />
    <link href="~/Assets/admin/image/person72.png" rel="stylesheet" />
    <link href="~/Assets/admin/css/Css.Navbarcss.css" rel="stylesheet" />
    <link href="~/Content/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/admin/css/Css.MailChimp.css" rel="stylesheet" />
    <link href="~/Assets/admin/css/Css.Footer.css" rel="stylesheet" />
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <img src="/image/ticket.png" alt="Alternate Text" height="50" width="50" />
            <a class="navbar-brand" @Html.ActionLink("Ticket Online", "Index", "Home")</a>
            <div id="Tim-Kiem">
                @using (Html.BeginForm("KqTimKiem"))
                {
                    @Html.TextBox("txtTimKiem", "", htmlAttributes: new { @class = "TextBoxTimKiem", placeholder = "Nhập vào từ khóa cần tìm..." });
                    @*<div id="divHinhAnhTimKiem"><button type="submit"><img src="~/IMG/imgSearch.png" /> </button></div>*@
                    <div id="search">
                        <i class="fa fa-search" aria-hidden="true"></i>
                    </div>
                }
            </div>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link"
                           @Html.ActionLink("Đăng Nhập", "DangNhap", "DangNhap")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           @Html.ActionLink("Đăng Ký", "DangKy", "DangKy")</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link"
                           @Html.ActionLink("Tạo Sự Kiện", "TaoSuKien", "TaoSuKien")</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Jumbotron Header -->
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <!-- Slide One - Set the background image for this slide in the line below -->
            <div class="carousel-item active" style="background-image: url('/Images_ticket/openday.png')">
                <div class="carousel-caption d-none d-md-block">
                    @*<h3>First Slide</h3>
                        <p>This is a description for the first slide.</p>*@
                </div>
            </div>
            <!-- Slide Two - Set the background image for this slide in the line below -->
            <div class="carousel-item" style="background-image: url('/Images_ticket/VeXe.jpg')">
                <div class="carousel-caption d-none d-md-block">
                    @*<h3>Second Slide</h3>
                        <p>This is a description for the second slide.</p>*@
                </div>
            </div>
            <!-- Slide Three - Set the background image for this slide in the line below -->

            <div class="carousel-item" style="background-image: url('/Images_ticket/Toeic.jpg')">
                <div class="carousel-caption d-none d-md-block">
                    @*<h3>Third Slide</h3>
                        <p>This is a description for the third slide.</p>*@
                </div>
            </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    @RenderBody()
    <!-- begin_Footer -->
    <footer class="py-3 bg-dark">
        @*Begin_ChiaCot*@
        <div class="row">
            @*begin_LienHe*@
            <div class="col-md-4">
                <div class="text-white">
                    Hotline hỗ trợ<br />
                    <i class="fa fa-phone" aria-hidden="true"></i>Hồ Chí Minh: Thứ 2 - Thứ 6 (8:30 - 19:30)<br />028.7300.7998<br />
                    <i class="fa fa-phone" aria-hidden="true"></i>Hà Nội: Thứ 2 - Thứ 6 (9:30 - 18:30)<br />024.7300.1235<br />
                    Email hỗ trợ<br /><i class="fa fa-envelope" aria-hidden="true"></i>support@ticketbox.vn
                </div>
            </div>
            @*End_LienHe*@

            @*begin_Google Map API*@
            <div class="col-md-4">
                <div class="text-white">
                    Văn phòng Hồ Chí Minh<br />
                    <i class="fa fa-map-marker" aria-hidden="true"></i>Tầng 1, Cao ốc văn phòng H3, 384 Hoàng Diệu, Q.4<br />
                    <div id="map"></div>
                    <script>
                        // This example displays a marker at the center of Australia.
                        // When the user clicks the marker, an info window opens.
                        function initMap() {
                            var uluru = { lat: 10.760235, lng: 106.699067 };
                            var map = new google.maps.Map(document.getElementById('map'), {
                                zoom: 16,
                                center: uluru
                            });

                            var contentString = '<div id="content">' +
                                '<div id="siteNotice">' +
                                '</div>' +
                                '<h1 id="firstHeading" class="firstHeading">Uluru</h1>' +
                                '<div id="bodyContent">' +
                                '<p>Tầng 1, Cao ốc văn phòng H3, 384 Hoàng Diệu, Q.4</p>' +
                                '</div>' +
                                '</div>';

                            var infowindow = new google.maps.InfoWindow({
                                content: contentString
                            });

                            var marker = new google.maps.Marker({
                                position: uluru,
                                map: map,
                                title: 'Uluru (Ayers Rock)'
                            });
                            marker.addListener('click', function () {
                                infowindow.open(map, marker);
                            });
                        }
                    </script>
                    <script async defer
                            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBemEJuvUX3wV-PhnN_4EmiaTmlD9AGrl8&callback=initMap">
                    </script>
                </div>
            </div>
            @*End_Google Map API*@

            @*Begin_Dang ky nhan mail*@
            <div class="col-md-4">
                <div class="text-white">
                    <!-- Begin MailChimp Signup Form -->
                    <div id="mc_embed_signup">
                        <form action="https://facebook.us16.list-manage.com/subscribe/post?u=24d1c3f38a6e27466eeb1e72a&amp;id=9d99d20915" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
                            <div id="mc_embed_signup_scroll">
                                <label for="mce-EMAIL">ĐĂNG KÝ NHẬN TIN TỪ TICKETONLINE</label>
                                <input type="email" value="" name="EMAIL" class="email" id="mce-EMAIL" placeholder="Địa chỉ email của bạn" required>
                                <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
                                <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_24d1c3f38a6e27466eeb1e72a_9d99d20915" tabindex="-1" value=""></div>
                                <div class="clear"><input type="submit" value="ĐĂNG KÝ" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
                            </div>
                        </form>
                    </div>
                    <!--End mc_embed_signup-->
                </div>
            </div>
            @*End_dang ky nhan mail*@
        </div>
        @*End_chiaCot*@
    </footer>
    @*End_footer*@
    <!-- Bootstrap core JavaScript -->
    <script src="/Assets/admin/vendor/jquery/jquery.min.js"></script>
    <script src="/Assets/admin/vendor/popper/popper.min.js"></script>
    <script src="/Assets/admin/vendor/bootstrap/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="//downloads.mailchimp.com/js/signup-forms/popup/embed.js" data-dojo-config="usePlainJson: true, isDebug: false"></script>
    <script type="text/javascript">require(["mojo/signup-forms/Loader"], function (L) { L.start({ "baseUrl": "mc.us16.list-manage.com", "uuid": "24d1c3f38a6e27466eeb1e72a", "lid": "9d99d20915" }) })</script>
</body>
</html>